<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dino_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Orange400"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Dinosaur List"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/dino_pronounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/dino_name"
        android:background="@color/Orange400"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="HOW DO I SAY IT"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic"/>
    <ImageView android:id="@+id/soundButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/dino_pronounce"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/speaker"
        android:layout_gravity="right"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Orange400">
    <TextView android:id="@+id/dino_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/dino_pronounce"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:text="This is the location"
        android:background="@color/Orange400" />
        <ImageView android:id="@+id/mapIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/dino_location"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/map"
            android:onClick="onClick" />
        </LinearLayout>
    <TextView android:id="@+id/dino_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/dino_location"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:text="This is the descrption"
        android:background="@color/Orange400" />
</LinearLayout>